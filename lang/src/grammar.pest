WHITESPACE = _{ (" " | "\t" | "\r" | "\n" ) }

// 42
Int = @{
    "-"?
    ~ ("0" | ASCII_NONZERO_DIGIT ~ ASCII_DIGIT*)
    ~ (^"e" ~ ("+" | "-")? ~ ASCII_DIGIT+)?
}

// 6.66
Float = @{
    "-"?
    ~ ("0" | ASCII_NONZERO_DIGIT ~ ASCII_DIGIT*)
    ~ ("." ~ ASCII_DIGIT*)
    ~ (^"e" ~ ("+" | "-")? ~ ASCII_DIGIT+)?
}

Bool = { "true" | "false" }

SExpr = { "(" ~ Expr* ~ ")" }

Expr = { Float | Int | Bool | SExpr }

Program = { SOI ~ Expr* ~ EOI }
